<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:visibility="gone"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity" tools:visibility="visible" >

    <LinearLayout style="@style/layout_row">
        <TextView android:text="alert"
            style="@style/header_text" />

        <LinearLayout style="@style/layout_content_column">
            <Button android:id="@+id/btn_alert_off"
                android:text="OFF"
                style="@style/btn" />

            <Button android:id="@+id/btn_alert_vibration"
                android:text="vibration"
                style="@style/btn" />

            <Button android:id="@+id/btn_alert_alarm"
                android:text="alarm"
                style="@style/btn" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/layout_row">
        <TextView android:text="battery state"
            style="@style/header_text" />

        <LinearLayout style="@style/layout_content_column">

            <TextView android:id="@+id/text_battery_state"
                tools:text="50"
                style="@style/text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/layout_row">
        <TextView android:text="battery state"
            style="@style/header_text" />

        <LinearLayout style="@style/layout_content_column">
            <TextView android:id="@+id/text_battery_level"
                tools:text="0"
                style="@style/text" />

            <Button android:id="@+id/btn_read_battery"
                android:text="read battery level"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                style="@style/btn" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
